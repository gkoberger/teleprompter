@import 'nib';

*, *:before, *:after
  box-sizing border-box

body
  padding: 80px 50px 50px
  font: 14px "Open Sans", Helvetica, Arial, sans-serif
a
  color: #00B7FF

nav
  padding 15px
  position absolute
  top 0
  width 100%
  background #fff
  border-bottom 1px solid #ddd
  left 0
  box-shadow 0 0 9px rgba(0,0,0,0.1)
  input
    width 670px
    padding 7px 20px
    border 1px solid #ddd
    border-radius 4px
    line-height 1em
  .btn
    padding 8px 20px
    font-size 13px
    line-height 1em
    border-radius 4px
    border 0 none
    background #0262ff
    color #fff
    text-decoration none
    display inline-block
    &:hover
      background darken(@background, 10%)
    &.lite
      color #0262ff
      background #eee
      &:hover
        background darken(@background, 10%)
.ipad
  display none

.switch
  i
    margin-right 3px
  span
    opacity 0.6
    font-size 14px
    margin-left 4px
    font-family monospace

#content
  max-width 1000px
  margin auto
  > *
    color #BBB
    &.current
      color #000
      .command
        background #7a9cd8
        color #fff
  .command
    background #eee
    margin-right 7px
    padding 0px 5px
    border-radius 4px

.is-tele
  .switch
    position absolute
    top 0
    left 0
    color #fff
    z-index 1000
    font-size 30px
    padding 15px
  .command
    background #fff
    color #000
    margin-right 15px
  .ipad
    display block
  nav
    display none
  #content-parent
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    display block
    background #000
    color #fff
    font-size 40px
    overflow hidden
    transform scaleX(-1)
    #content
      padding 0 50px
      transition top 0.3s ease-out
      position absolute
      top 0
      > *
        opacity 0.3
        margin 0
        padding 20px 0
        transition opacity 0.3s ease-out
        color #fff
        &.current
          opacity 1

#pg-setup
  background #000
  form
    width 520px
    margin auto
    color #fff
    font-size 19px
  h1
    font-family monospace
  #email
    position relative
    margin-bottom 5px
    input
      background #333
      border-radius 5px
      padding 5px 80px 5px 20px
      display block
      font-size 26px
      font-family monospace
      border 0 none
      width 100%
      &:focus
        background #fff
    button
      position absolute
      right 10px
      border: 0 none;
      height: 26px;
      width: 50px;
      border-radius: 3px;
      top: 7px;
      background: #4186fe;
      color: #fff;
    p.warning, p.byline
      color #999
      font-size 15px
      a
        text-decoration none
        color #4186fe
        &:hover
          color darken(@color, 20%)
      strong
        color #fff
