extends layout

block content
  nav
    a.switch.btn(href="#") #[i.fas.fa-random] Teleprompter View #[span s]
    form(method="POST" action="/" style="float:right;")
      input#paper(type="text" name="url" value=tele.url placeholder="Enter a Dropbox Paper URL")
      | &nbsp;
      | &nbsp;
      button#update.btn(type="submit") Update
      | &nbsp;
      | &nbsp;
      if tele.url
        a.btn.lite(href=tele.url target="_blank") Edit
      else
        a.btn.lite(href="https://paper.new" target="_blank") Create a Script
  a.ipad.switch(href="#")
    i.fas.fa-random

  #content-parent
    #content
      h1= tele.title
      != marked(tele.markdown)

      .actions
        hr

        div
          a(href="https://github.com/gkoberger/teleprompter/tree/master/connection_demo" target="_blank")
            i.fa.fa-code
            | Connect via Node to automate things
          if multi
            | &nbsp;&nbsp;&middot;&nbsp;&nbsp;
            a(href="/logout")
              i.fa.fa-sign-out-alt
              | Log out
